page {
  background-color: #f1f1f1;
  height: 100%;
}

.btnstyle {
  display: flex;
  height: 60rpx;
  margin: 20rpx 20rpx 0rpx 20rpx;
  align-items: center;
  justify-content: center;
}

/*
  background-color: #00B26A;
