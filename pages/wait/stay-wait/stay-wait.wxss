.bg_select{
  background-color: #f1f1f1;
  display: flex;
  justify-content: center;
  flex-direction: column;
  width: 100%;
  height: 80rpx;
  font-size: 26rpx;
  padding-left: 20px;
}

.form {
    margin-top: 20rpx;
    background: white;
    font-size: 32rpx;
    padding-left: 42rpx;
}

.input-group {
    position: relative;
    padding:24rpx 0;
    border-bottom: 1px solid #f3f3f3;
}

.input-group label {
    display: inline-block;
    width: 28%;
}
.input-group text{
    display: inline-block;
    border: none;
    width: 65%;
    height: auto;
    min-height: auto;
    overflow: inherit;
    padding-left: 5px;
}
.local_address{
  display: inline-block;
  width: 10%;
}