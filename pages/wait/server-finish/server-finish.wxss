.bg {
  background-color: #f1f1f1;
}

.server-steps {
  background-color: #fff;
 
}

.steps {
  margin: 1rpx;
  width: 100%;
  height: 200rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.server-oder-msg {
  display: flex;
  flex-direction: column;
  margin-top: 20rpx;
  background-color: #fff;
}

.server-oder-txt {
  font-size: 35rpx;
  margin: 20rpx;
  border-bottom: 1rpx solid #d9d9d9;
}

.server-oder-state {
  display: flex;
  flex-direction: row;
}

.server-oder-state-txt {
  font-size: 28rpx;
  color: #636363;
  margin: 10rpx;
}

.server-oder-state {
  font-size: 28rpx;
