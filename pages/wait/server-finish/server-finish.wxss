  display: flex;
  flex-direction: column;
  margin-top: 20rpx;
  background-color: #fff;
}

.oder-detail {
  margin: 20rpx;
  font-size: 35rpx;
  border-bottom: 1rpx solid #d9d9d9;
}

.server-oder-detail-tx {
  display: flex;
  flex-direction: row;
  margin: 20rpx;
}

.server-oder-detail-option {
  display: flex;
  flex-direction: row;
