page {
  display: block;
  min-height: 100%;
  background-color: #f1f1f1;
}

.Splash{
  background-color: #5bb9e9;
  width: 100%;
  height: 100%;
}
.top_img {
  width: 100%;
  height: 215rpx;
  background-color: #5bb9e9;
}

.address {
  display: flex;
  flex-direction: row;
}

.adimg {
  height: 40rpx;
  width: 40rpx;
}

.swbg {
  display: flex;
  height: 150rpx;
  width: 100%;
  background-color: #5bb9e9;
  justify-content: center;
}

.addressbg {
  display: flex;
  justify-content: center;
  align-items: center;
  background-color: #5b94e9;
  border-radius: 50rpx;
  width: 80%;
  height: 60rpx;
  margin-top: 12rpx;
}

.viewbg {
  position: absolute;
  margin: 8rpx;
  top: 470rpx;
  width: 98%;
}

.new {
  align-items: center;
  display: flex;
  height: 150rpx;
  border: 1rpx solid #eaeaea;
  border-radius: 30rpx;
  margin: 5rpx;
  margin-bottom: 20rpx;
  padding: 8rpx;
  background-color: white;
}

.detail {
  display: flex;
  flex-direction: column;
}

.detailT {
  color: #8a8a8a;
  font-size: 27rpx;
  margin-top: 10rpx;
}
